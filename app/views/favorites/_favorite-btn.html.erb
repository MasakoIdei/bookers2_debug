<% if book.favorited_by?(current_user) %>
<!--remote:trueでjsに操作を飛ばす-->
  <%= link_to book.favorites.count, book_favorites_path(book), method: :delete, class: "fas fa-heart heart-pink",remote: true %>
<% else %>
  <%= link_to book.favorites.count, book_favorites_path(book), method: :post, class: "fas fa-heart heart_blue",remote: true %>
<% end %>

